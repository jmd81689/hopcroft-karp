include config.make

TARGETS = sort_ecos_st_sw.elf sort_ecos_mt_sw.elf sort_ecos_st_hw.elf sort_ecos_mt_hw.elf

CC=mb-gcc
CFLAGS=-O3 -g -Wall -ffunction-sections -fdata-sections -I../shared -I$(ECOS_INSTALL)/include \
 -I$(HW_DESIGN)/microblaze_0/include -Iinclude -msoft-float -I$(RECONOS)/core/ecos/include -DUSE_ECOS -D__RECONOS__
LDFLAGS=-g -nostartfiles --gc-sections -L$(HW_DESIGN)/microblaze_0/lib -L$(ECOS_INSTALL)/lib -Ttarget.ld -nostdlib -msoft-float

all: $(TARGETS)

mrproper: clean
	rm -rf $(ECOS_INSTALL) $(ECOS_BUILD)

sort_ecos_st_sw.elf: sort_ecos_st_sw.o merge.o data.o timing.o bubblesort.o
	$(CC) $^ $(LDFLAGS) -o $@
	mb-size -A $@
	#cp $@ /tmp/.

sort_ecos_mt_sw.elf: sort_ecos_mt_sw.o merge.o sort8k.o data.o timing.o bubblesort.o
	$(CC) $^ $(LDFLAGS) -o $@
	mb-size -A $@
	#cp $@ /tmp/.

sort_ecos_st_hw.elf: sort_ecos_st_hw.o merge.o data.o timing.o
	$(CC) $^ $(LDFLAGS) -o $@
	mb-size -A $@
	#cp $@ /tmp/.

sort_ecos_mt_hw.elf: sort_ecos_mt_hw.o merge.o sort8k.o data.o timing.o bubblesort.o
	$(CC) $^ $(LDFLAGS) -o $@
	mb-size -A $@
	#cp $@ /tmp/.

deps:
	$(CC) -MM *.c  $(CFLAGS) > .deps

#include .deps

.PHONY: clean deps mrproper

clean:
	rm -f *.o $(TARGETS)

